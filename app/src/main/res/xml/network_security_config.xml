<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuración para desarrollo: permite HTTP (cleartext) para el emulador Android -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Emulador Android: 10.0.2.2 es el alias para localhost de la máquina host -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- También permitir localhost para desarrollo en dispositivo físico -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- Configuración base: por defecto no permitir cleartext en producción -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>

